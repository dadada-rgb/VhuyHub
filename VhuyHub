local HttpService = game:GetService("HttpService")
local SETTINGS_FILE = "DhuyxDtuyen_Settings.json"

local function SaveSettings()
    local saveData = {
        Config = Config,
        MenuPos = {
            ScaleX = MenuFrame.Position.X.Scale,
            OffsetX = MenuFrame.Position.X.Offset,
            ScaleY = MenuFrame.Position.Y.Scale,
            OffsetY = MenuFrame.Position.Y.Offset
        },
        MenuVisible = MenuFrame.Visible
    }
    writefile(SETTINGS_FILE, HttpService:JSONEncode(saveData))
end

local function LoadSettings()
    if isfile(SETTINGS_FILE) then
        local data = HttpService:JSONDecode(readfile(SETTINGS_FILE))
        if data.Config then
            for k,v in pairs(data.Config) do
                Config[k] = v
            end
        end
        if data.MenuPos then
            MenuFrame.Position = UDim2.new(data.MenuPos.ScaleX, data.MenuPos.OffsetX, data.MenuPos.ScaleY, data.MenuPos.OffsetY)
        end
        if data.MenuVisible ~= nil then
            MenuFrame.Visible = data.MenuVisible
            ToggleButton.Text = data.MenuVisible and "HIDE" or "SHOW"
        end
    end
end

-- Gọi ngay khi GUI tạo xong
task.defer(LoadSettings)


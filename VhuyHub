    antiFlingEnabled = not antiFlingEnabled
    antiFlingButton.Text = "Anti Fling: " .. (antiFlingEnabled and "ON" or "OFF")
    sendNotification("Anti Fling", antiFlingEnabled and "Enabled" or "Disabled")

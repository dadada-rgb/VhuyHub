local StarterGui = game:GetService("StarterGui")

function sendNotification(title, text, duration)
    pcall(function()
        StarterGui:SetCore("SendNotification", {
            Title = title or "DhuyxDtuyen",
            Text = text or "",
            Duration = duration or 3
        })
    end)
end


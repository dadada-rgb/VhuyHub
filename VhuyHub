modeBox.Text = tostring(Config.AntiLockType)
Instance.new("UICorner", modeBox).CornerRadius = UDim.new(0, 4)
modeBox.Parent = ButtonFrame1

modeBox.FocusLost:Connect(function()
    if AntiLockDirections[modeBox.Text] then
        Config.AntiLockType = modeBox.Text
        sendNotification("AntiLock mode set: " .. Config.AntiLockType)
    else
        sendNotification("Invalid mode! Keeping: " .. Config.AntiLockType)
        modeBox.Text = Config.AntiLockType
    end
    SaveSettings()
end)

-- =========================
-- Logic (Heartbeat)
-- =========================
if _G.VHUB_AntiLockConn then _G.VHUB_AntiLockConn:Disconnect() end
_G.VHUB_AntiLockConn = game:GetService("RunService").Heartbeat:Connect(function()
    if not Config.AntiLockEnabled then return end

    local char = game.Players.LocalPlayer.Character
    local hrp = char and char:FindFirstChild("HumanoidRootPart")
    if not hrp then return end

    local dir = AntiLockDirections[Config.AntiLockType] or AntiLockDirections.Behind
    local oldVel = hrp.Velocity
    hrp.Velocity = dir * (2^16)
    game:GetService("RunService").RenderStepped:Wait()
    if hrp and hrp.Parent then
        hrp.Velocity = oldVel
    end
end)

